{% set title = admin_title() %}
{% set site = setting('site',{}) %}
<!DOCTYPE html>
<html {% block html_attributes %}{% endblock %}>
    <head>
        {% block metas %}
            <meta charset="UTF-8">
            <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        {% endblock %}
        <title>
            {% block title %}
                {{ 'Admin'|trans }}
                {% if title is not empty %}
                    {{ title|raw }}
                {% endif%}
            {% endblock %}
        </title>
        {% for stylesheet in admin_stylesheets() %}
            <link rel="stylesheet" href="{{ asset(stylesheet) }}">
        {% endfor %}
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body {% block body_attributes %}class="hold-transition sidebar-mini skin-blue"{% endblock %}>
        {% block header %}
            <header class="main-header">
                {% block logo %}
                    <a class="logo hidden-xs" href="{{ url('glory_admin') }}">
                        {% if site.logo is defined and site.logo is not empty %}
                            <img src="{{ asset(site.logo) }}" alt="{{ site.title }}">
                        {% endif %}
                        {% if site.title is defined %}
                            <span> <b> {{ site.title }} </b> </span>
                        {% else %}
                            <span> <b> GloryAdmin </b> </span>
                        {% endif %}
                    </a>
                {% endblock %}
                {% block navigation %}
                    <nav class="navbar navbar-static-top" role="navigation">
                        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                            <span class="sr-only">Toggle navigation</span>
                        </a>
                        <div class="navbar-left">
                        </div>
                        <div class="navbar-right">
                        </div>
                        <div class="navbar-custom-menu">
                            <ul class="nav navbar-nav">
                                <li class="">
                                    <a href="{{asset('')}}"><i class="fa fa-home"></i> <span class="hidden-xs">回首页</span></a>
                                </li>
                            </ul>
                            <ul class="nav navbar-nav">
                                <li class="dropdown messages-menu">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="fa fa-envelope-o"></i>
                                        <span class="label label-success">0</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li class="header">You have no message</li>
                                            {#<li>
                                                <ul class="menu">
                                                    <li>
                                                        <a href="#">
                                                            <div class="pull-left">
                                                                <img src="{{message.user.avatar}}" class="img-circle">
                                                            </div>
                                                            <h4>
                                                                {{message.user.username}}
                                                                <small><i class="fa fa-clock-o"></i> {{message.date('Y-m-d H:i:s')}}</small>
                                                            </h4>
                                                            <p>{{message.content|raw}}</p>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </li>#}
                                        <li class="footer"><a href="#">See All Messages</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown notifications-menu">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="fa fa-bell-o"></i>
                                        <span class="label label-warning">0</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li class="header">You have no notification</li>
                                            {#<li>
                                                <ul class="menu">
                                                    <li>
                                                        <a href="#">
                                                            <i class="fa fa-users text-aqua"></i> {{notification.content|raw}}
                                                        </a>
                                                    </li>
                                                </ul>
                                            </li>#}
                                        <li class="footer"><a href="#">View all</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown tasks-menu">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="fa fa-flag-o"></i>
                                        <span class="label label-danger">0</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li class="header">You have no task</li>
                                            {#<li>
                                                <ul class="menu">
                                                    <li>
                                                        <a href="#">
                                                            <h3>
                                                                {{task.content}}
                                                                <small class="pull-right">20%</small>
                                                            </h3>
                                                            <div class="progress xs">
                                                                <div class="progress-bar progress-bar-aqua" style="width: 20%" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                                                                    <span class="sr-only">20% Complete</span>
                                                                </div>
                                                            </div>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </li>#}
                                        <li class="footer">
                                            <a href="#">View all tasks</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="dropdown visible-sm">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        <i class="fa fa-plus-square fa-fw"></i> 常用 <i class="fa fa-caret-down"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#"><i class="fa fa-plus-square fa-fw"></i>添加当前页为常用</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                                </li>
                            </ul>
                        </div>

                    </nav>
                {% endblock %}
            </header>
        {% endblock %}

        {% block wrapper %}
            {% block sidebar %}
                <aside class="main-sidebar">
                    <section class="sidebar">
                        <div class="user-panel">
                            <div class="pull-left image">
                                {% if app.user.avatar is defined %}
                                    <img src="{{app.user.avatar}}" class="img-circle">
                                {% else %}
                                    <img src="{{asset('assets/images/avatar.jpg')}}" class="img-circle">
                                {% endif %}
                            </div>
                            <div class="pull-left info">
                                <p>
                                    {% if app.user.username is defined %}
                                        {{app.user.username}}
                                    {% else %}
                                        Anonymous
                                    {% endif %}
                                </p>
                                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                                <a href="{{path('glory_admin_logout')}}"><i class="fa fa-sign-out text-red"></i> Logout</a>
                            </div>
                        </div>
                        <ul class="sidebar-menu">
                            <li class="header">NAVIGATION</li>
                            <li class="treeview active">
                                <a href="#">
                                    <i class="fa fa-dashboard"></i> <span>仪表盘</span> <i class="fa fa-angle-left pull-right"></i>
                                </a>
                            </li>
                            <li class="treeview">
                                <a href="#">
                                    <i class="fa fa-list"></i> <span>菜单</span><i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li><a href="{{path('glory_menu')}}"><i class="fa fa-shopping-cart"></i> 菜单管理</a></li>
                                    <li><a href="{{path('glory_menu_create_type')}}"><i class="fa fa-truck"></i> 添加菜单</a></li>
                                </ul>
                            </li>
                        </ul>
                    </section>
                </aside>
            {% endblock %}
            <div class="content-wrapper">
                {% block crumb %}
                    <section class="content-header">
                        <h1>GloryFrame<small>Control</small></h1>
                        <ol class="breadcrumb">
                            <li><a href="{{path('glory_admin')}}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                            <li><a href="#">Parent</a></li>
                            <li class="active">Active</li>
                        </ol>
                    </section>
                {% endblock %}
                {% block notice %}
                {% endblock notice %}
                <section class="content">
                    {% block content %}
                        <iframe frameborder="0" width="100%" height="100%" src="" id="iframe" name="iframe" style="
                                bottom: 0;
                                height: 100%;
                                left: 0;
                                padding: 15px;
                                position: absolute;
                                right: 0;
                                top: 0;
                                width: 100%;"></iframe>
                        {% endblock %}
                </section>
            </div>
        {% endblock %}

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> {{ admin_version() }}
            </div>
            <strong>Copyright &copy; 2016 <a href="https://foreverglory.me">ForeverGlory</a>.</strong> All rights reserved.
        </footer>
        <div class="control-sidebar-bg"></div>
        {% for javascript in admin_javascripts() %}
            <script src="{{ asset(javascript) }}"></script>
        {% endfor %}
        {% block javascripts %}
            <script>
            </script>
        {% endblock %}
    </body>
</html>
